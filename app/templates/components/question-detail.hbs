<h4>{{question.title}}</h4>
<h5>{{question.user}}</h5>
<h6>{{question.notes}}</h6>
<p>
  {{question.content}}
</p>
{{update-question question=question updateQuestion="updateQuestion"}}
<button class="btn btn-danger" {{action 'delete' question}}>Delete Question</button>
{{#each question.answers as |answer|}}
  {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
{{/each}}

{{new-answer saveAnswer="saveAnswer" question=question}}
