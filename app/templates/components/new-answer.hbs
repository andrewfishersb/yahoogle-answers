{{#if newAnswerForm}}
  <label>Enter Username</label>
  {{input class="form-control" value=user id="user"}}
  <label>Enter Answer</label>
  {{input class="form-control" value=content id="content"}}
  <button class="btn btn-success form-control" {{action 'saveAnswer'}}>Submit Answer</button>
  <button class="btn btn-danger form-control" {{action 'hideAnswerForm'}}>Cancel</button>

{{else}}
  <button class="btn btn-primary form-control" {{action 'showAnswerForm'}}>Add an Answer</button>
{{/if}}
